<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="bank.client.controllers.LoginController" prefWidth="400" prefHeight="300">
    <children>
        <Label text="Đăng nhập tài khoản" layoutX="120" layoutY="30" style="-fx-font-size: 18px;"/>
        <Label text="Tên tài khoản:" layoutX="80" layoutY="90"/>
        <TextField fx:id="txtUsername" layoutX="180" layoutY="85" prefWidth="150"/>
        <Label text="Mật khẩu:" layoutX="80" layoutY="130"/>
        <PasswordField fx:id="txtPassword" layoutX="180" layoutY="125" prefWidth="150"/>
        <Button text="Đăng nhập" layoutX="150" layoutY="180" prefWidth="100" onAction="#handleLogin"/><![CDATA[
    ]]></children>
</AnchorPane>
